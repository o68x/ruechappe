---
const { position = "left", title = null } = Astro.props

---
<article id={ title } class={ position }>
  <div class="content">
    <!-- Using a named slot in case I want to add other stuff to this -->
    <slot name="content"/>
  </div>
</article>

<style lang="scss">
article {
  border: 1px solid var(--text-1);
  border-radius: var(--radius-2);
  background-color: var(--surface-2);
  color: var(--text-1);
  font-weight: var(--font-weight-3);
  font-size: var(--font-size-3);
}

.content {
  display: grid;
  grid-template-columns: 1fr minmax(33vw, 55ch) 5fr;

  & > :global(*) {
    grid-column: 2;
  }

  padding: 1em;
}

.center.columns {
  & > .content {
    @media all and (min-width: 900px) {
      max-width: max-content;
      columns: 2 auto;
      column-gap: var(--size-fluid-3);
    }

    @media all and (min-width: 1500px) {
      max-width: max-content;
      columns: 3 auto;
      column-gap: var(--size-fluid-4);
    }
  }
}

#intro {
  /* padding-top: 1rem; */
}

/* TODO: put it in the component? */
#apropos {
  & :global(.mugshot) > img {
    float: right;
    width: calc(var(--vw12) * 3);
  }
}
</style>