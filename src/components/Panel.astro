---
const { position = "left", title = null } = Astro.props

---
<article id={ title } class={ position }>
  <div class="shape"></div>
  <div class="content">
    <slot name="content"/>
  </div>
</article>

<style lang="scss">
article {
  border: 1px solid var(--color-text);
  border-radius: var(--box-radius);
  background-color: var(--color-text-bg);
  color: var(--color-text);
}

.content {
  max-width: 60ch;
  padding: 1em;
}

.center.columns {
  .content {
    @media all and (min-width: 900px) {
      max-width: max-content;
      columns: 2 auto;
      column-gap: 2rem;
    }

    @media all and (min-width: 1500px) {
      max-width: max-content;
      columns: 3 auto;
      column-gap: 2rem;
    }
  }
}

#hero {
  color: orangered;
}

#intro {
  .shape {
    width: 100px;
    height: 150px;
    float: left;
    shape-outside: polygon(0px 0px, 0px 7.60vh, 11vw 6vw, 100% 0%)
  }

  .content {
    position: relative;
    // padding-top: var(--vw12);
  }
}
</style>