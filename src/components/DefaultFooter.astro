---
import HomeIcon from "./svg/home.svg.astro";
import WorldIcon from "./svg/world.svg.astro";
---
<div class="footer-inner">
  <div class="footer-left">
    <div class="offline">
    <HomeIcon />
    <p>4 rue Chappe, 75018 Paris</p>
    <p>06 89 63 80 14</p>
    </div>
    <div class="online">
    <WorldIcon />
    <p>olivier@ruechappe.fr</p>
    </div>

  </div>

  <div class="footer-right logo">
    <p>ruechappe.fr</p>
  </div>
</div>

<style>
.footer-inner {
  display: flex;
  justify-content: space-between;
  align-items: end;
  padding: var(--size-fluid-1);
  border-top: 1px solid var(--text-1);
}

.online,
.offline {
  display: grid;
  grid-template-columns: max-content max-content;
  line-height: var(--font-lineheight-3);

  & svg {
    height: 26px;
    width: 26px;
  }

  & :first-child {
    /* this is the icon, spans two rows
    the next one or two els are in second row */
    grid-row: 1 / 3;
    padding-right: var(--size-2);
  }
}

.logo {
  font-size: 18px;
}
</style>
