---
const { position = "left", title = null } = Astro.props

---
<article id={ title } class="full">
<div class="content">
  <slot name="content"/>
</div>
</article>

<style lang="scss">
.content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(25ch, 1fr));
  margin: 0 calc(var(--vw12) / 3);

  & > :global(*) {
    margin: 0 calc(var(--vw12) / 3);
    padding: 1em;
    border: 1px solid var(--color-text);
    border-radius: var(--box-radius);
    background-color: var(--color-text-bg);
    color: var(--color-text);
  }
}

#hero {
  color: orangered;
}

#intro {
  .content {
    padding-top: var(--vw12);
  }
}

#points {
  padding-bottom: calc(var(--vw12) * 1.5);

  div > :nth-child(2) {
    transform: translateY(var(--vw12));
  }

  div > :nth-child(3) {
    transform: translateY(calc(var(--vw12) * 1.5));
  }
}

</style>