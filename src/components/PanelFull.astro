---
const { position = "left", title = null } = Astro.props

---
<article id={ title } class="full">
<div class="content">
  <slot name="content"/>
</div>
</article>

<style lang="scss">
.content {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  margin: 0 calc(var(--vw12) / 3);

  & > :global(*) {
    margin: calc(var(--vw12) / 3);
    padding: 1em;
    border: 1px solid var(--color-text);
    border-radius: var(--box-radius);
    background-color: var(--color-text-bg);
    color: var(--color-text);
  }
}

#hero {
  color: orangered;
}

#intro {
  .content {
    padding-top: var(--vw12);
  }
}
</style>