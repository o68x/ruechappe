// This layout allows for full-bleed

body {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  grid-auto-rows: minmax(var(--vw12), maxcontent);
  gap: 1rem;

  & > :global(*) {
    grid-column: 2 / -2;
  }

  & > :global(.full) {
    grid-column: 1 / -1;
  }

  background-color: var(--color-fancy-bg);
}

/* stylelint-disable-next-line no-descending-specificity */
:global(.center) {
