  </main>
  <footer>
    <a href="#">oops</a>
  </footer>
</body>

</Html>

<style lang="scss">
// This layout allows for full-bleed

body {
  display: grid;
  grid-template-columns:
    1fr
    10fr
    1fr;
  grid-template-rows:
    // 8.33vw is 1/12 de 100vw, bcz of 12 cols grid
    8.33vw
    minmax(calc(100vh - 16.66vw), 1fr)
    8.33vw;

  & > :global(*) {
    grid-column: 2;
  }

  & > :global(.full) {
    grid-column: 1 / -1;
  }

  background-color: var(--color-fancy-bg);
}

main {
  display: grid;
  grid-template-columns: repeat(10, 1fr);
  gap: 1rem;
}

/* stylelint-disable-next-line no-descending-specificity */
:global(.center) {
  grid-column: 1 / -1;
}

:global(.left) {
  grid-column: 1 / 8;
}

:global(.right) {
  grid-column: -8 / -1;
}

:global(#hero) {
  margin-top: 5rem;
}
</style>
